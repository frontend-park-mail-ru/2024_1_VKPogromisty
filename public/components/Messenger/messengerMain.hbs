<div id="main">
  <div class="feed-main">
    <div class="sidebar" id="sidebar">
    </div>

    <div id="activity" class="activity">
        <div class="dialogs">
            <div class="search-dialog">
            </div>
            {{#each chats}}
            <div class="dialog" id="dialog-id">
                <div class="chatter">
                    <a href="/profile"><img class="chatter__avatar-img" /></a>
                    <div class="chatter-info">
                        <span class="chatter-info__name-span"></span>
                        <div class="chatter-content">
                            <span class="chatter-content__message-span"></span>
                            <span class="chatter-content__time-span"></span>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
  </div>
</div>
