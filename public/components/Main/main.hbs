<div id="main">
  <div class="server-error-500 error" id="server-error-500">
    Неожиданная ошибка
  </div>
  <div class="feed-main">
    <div class="sidebar" id="sidebar">
      <ul class="sidebar-list">
        {{#each fullSidebar}}
        <li class="sidebar-list__li">
          <a class="sidebar-list__a" href="{{ this.href }}">{{ this.text }}</a>
          <a class="sidebar-list__a-img" href="{{ this.href }}">
            <img
              src="dist/images/{{ this.icon }}.png"
              class="sidebar__{{ this.icon }}-img"
            />
          </a>
        </li>
        {{/each}}
      </ul>
    </div>

    <div id="activity" class="activity"></div>
    <div class="scroller" id="scroller"></div>
  </div>
</div>
