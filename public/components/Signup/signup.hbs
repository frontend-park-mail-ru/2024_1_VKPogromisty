<div class="form-wrapper">
  <div class="form">
    <div class="image-container">
      <img src="../static/images/Logo.png" alt="Logo" />
    </div>
    <div class="sign-in-text">
      <div class="text-sign-in-first-part">Зарегистрируйтесь в</div>
      <div class="text-sign-in-second-part">Socio</div>
    </div>

    <div class="register-form">
      <form method="post" action="#" enctype="multipart/form-data">
        {{#each main_inputs}}
        <div class="input-group">
          <div class="inscription-form">
            {{ this.inscription }}
          </div>
          <input
            class="main-input"
            id="{{ this.id }}"
            type="{{ this.type }}"
            name="{{ this.name }}"
            placeholder="{{ this.placeholder }}"
            required
          />
          <div class="error" id="{{ this.incorrect }}"></div>
        </div>
        {{/each}}
        <label for="date-birthday" class="inscription-form"
          >Дата рождения</label
        >

        <div class="date-birthday">
          {{#each part_of_date}}
          <input
            id="{{ this.id }}"
            type="text"
            required
            placeholder="{{ this.placeholder }}"
          />
          <div class="error" id="incorrect-date-of-birthday"></div>
          {{/each}}
        </div>

        <div class="file-input">
          <label class="input-avatar">
            <input type="file" name="avatar" id="avatar" />
            <span>Загрузить изображение</span>
          </label>
        </div>
        <button type="button" class="button-sign-in" id="button-sign-up">
          Зарегистрироваться
        </button>
        <a href="/signup" class="link_sign_up" id="button-sign-up"
          >Уже есть аккаунт? Войти</a
        >
      </form>
    </div>
  </div>
</div>
