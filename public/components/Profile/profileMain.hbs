<div class="feed-main">
    <div class="sidebar">
        {{#each sidebar}}
        <ul>
            <li>
            <a href="{{ this.href }}">{{ this.text }}</a>
            </li>
        </ul>
        {{/each}}
        <ul id="help-sidebar">
            <li><a href="#">Помощь</a></li>
        </ul>
    </div>

    <div id="activity">
        <div id="profile-poster" class="profile-wrapper">
            <div class="profile-wrapper">
                <img class="profile-wrapper__settings-img" />
                <img class="profile-wrapper__back-img" />
            </div>
            <div class="profile-poster-view">
                <img class="profile-poster__avatar-img" />
                <div class="profile-brief">
                    <span class="profile-brief__name-span">{{this.fullName}}</span>
                    <div class="profile-brief-info">
                        <span class="profile-brief-info__date-span">{{this.date}}</span>
                        <span class="profile-brief-info__place-span">{{this.place}}</span>
                    </div>
                </div>
            </div>
        </div>
        <div id="create-post">
            <div id="news-avatar">
                <img id="user-avatar-news" src="../static/images/Logo.png" />
            </div>
            <div class="news">
                <input id="user-news" type="text" placeholder="Что нового?" readonly />
                <img
                src="../static/images/attach-paperclip-symbol.png"
                style="width: 16px; height: 16px"
                />
            </div>
            <button class="publish-button">Опубликовать</button>
        </div>
    </div>

</div>