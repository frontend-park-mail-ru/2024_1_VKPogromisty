{
  "parserOptions": {
    "requireConfigFile": false,
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "browser": true,
    "console": true
  },
  "parser": "@babel/eslint-parser",
  "plugins": ["jsx", "flow", "@babel/eslint-plugin"],
  "rules": {
    "no-unused-vars": "error",
    "no-undef": "error",
    "require-await": "warn"
  }
}